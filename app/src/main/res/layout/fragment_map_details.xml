<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.atlas.fragments.AboutUsFragment">

    <ImageView
        android:id="@+id/img_atlas_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/sb_map_legend"
        style="@style/SwitchButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:visibility="gone"
        app:kswBackColor="@color/topbar_color"
        app:kswThumbColor="@color/white" />

    <TextView
        android:id="@+id/lblmapnotfound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/no_map_found"
        android:textSize="@dimen/title_text_size"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rel_legend_block"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/rel_rounded_corner_drawable"

        android:visibility="gone">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Legend"
            android:textColor="@color/topbar_color"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>


    <com.atlas.ToolTip.ToolTipRelativeLayout
        android:id="@+id/tooltipframelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
